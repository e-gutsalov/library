{% extends 'base.html.twig' %}
{% block stylesheets %}
<style>
    .table { border-collapse: collapse; }
    .table th, td {
        border-bottom: 1px solid #ddd;
        width: 250px;
        text-align: left;
        align: left;
    }
</style>
{% endblock %}
{% block body %}
    <h2>Books database application!</h2>
    <div>
        <a href = "{{ path('new') }}">Add</a>
    </div>
    <table class = "table">
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Author</th>
            <th>Description</th>
            <th></th>
            <th></th>
        </tr>
        {% for x in data %}
            <tr>
                <td>{{ x.Name }}</td>
                <td>{{ x.Year }}</td>
                <td>{{ x.Author }}</td>
                <td>{{ x.Description }}</td>
                <td><a href = "{{ path('update', { 'id' : x.Id }) }}">Edit</a></td>
                <td><a href = "{{ path('delete', { 'id' : x.Id }) }}">Delete</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}